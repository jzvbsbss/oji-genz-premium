
#!/bin/bash
# OJI-GENZ SYSTEM PREMIUM v2 + DDOS UPDATE
# Jangan hapus hak cipta, hargai karya orang!

# WARNA
white='\033[1;37m'
green='\033[1;32m'
red='\033[1;31m'
cyan='\033[1;36m'
yellow='\033[1;33m'
purple='\033[1;35m'
blue='\033[1;34m'
reset='\033[0m'

# REPO URL (ganti ke repo kamu kalau mau)
repo_url="https://raw.githubusercontent.com/ojigenz/auto-update/main/oji-genz.sh"

# FUNCTION AUTO UPDATE
auto_update() {
    echo -e "${yellow}[•] Mengecek update terbaru...${reset}"
    sleep 1
    curl -s --head "$repo_url" | grep "200 OK" > /dev/null
    if [[ $? -eq 0 ]]; then
        echo -e "${green}[✓] Update tersedia! Mendownload...${reset}"
        curl -o "$0" "$repo_url"
        echo -e "${cyan}[•] Update berhasil, restart script..>
        sleep 2
        chmod +x "$0"
        exec "$0"
        exit
    else
        echo -e "${green}[✓] Tidak ada update, lanjut...${reset}"
    fi
}

# JALANKAN AUTO UPDATE
auto_update

# =========================
# TAMPILAN AWAL
# =========================
clear
echo -e "${green}"
echo "╔═════════════════════════════════════════╗"
